extends ../../layouts/default.pug
include ../../mixins/search.pug
include ../../mixins/pagination.pug

block main
  if(role.permissions.includes("roles_view"))
    h1(class="mb-4") Nhóm quyền

    .card.mb-3
      .card-header Danh sách
      .card-body
        .row
          .col-8
            +search(keyword)
          .col-4.text-right
            if(role.permissions.includes("roles_create"))
              a(
                href=`${prefixAdmin}/roles/create`
                class="btn btn-outline-success"
              ) + Thêm mới

        table(
          class="table table-hover table-sm product mt-3"
        )
          thead
            tr
              th STT
              th Nhóm quyền
              th Mô tả ngắn
              th Hành động

          tbody
            if(records.length > 0)
              each item, index in records
                tr
                  td #{pagination.limitItems*(pagination.currentPage-1) + (index+1)}
                  td #{item.title}
                  td #{item.description}
                  td
                    a(
                      class="btn btn-secondary btn-sm"
                      href=`${prefixAdmin}/roles/detail/${item.id}`
                    ) Chi tiết
                    if(role.permissions.includes("roles_edit"))
                      a(
                        class="btn btn-warning btn-sm ml-1"
                        href=`${prefixAdmin}/roles/edit/${item.id}`
                      ) Sửa
                    if(role.permissions.includes("roles_delete"))
                      button(
                        class="btn btn-danger btn-sm ml-1"
                        button-delete 
                        data-id = item.id
                      ) Xóa
            else
              tr
                td(colspan="4" class="text-center") Chưa có nhóm quyền nào được tạo.

    +pagination(pagination)
    
    form(action="" method="POST" id="form-change-status" data-path=`${prefixAdmin}/roles/change-status`)

    form(action="" method="POST" id="form-delete-item" data-path=`${prefixAdmin}/roles/delete`)

    script(src="/admin/js/role.js") 
  else 
    h1 Bạn không có quyền truy cập 
